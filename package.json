{
  "name": "braavos",
  "private": true,
  "scripts": {
    "postinstall": "yarn postinstall:1; yarn postinstall:2; yarn postinstall:3",
    "postinstall:1": "sed -i.bak 's/status: string;/status: boolean;/' ./node_modules/@types/web3/types.d.ts",
    "postinstall:2": "sed -i.bak '10s/message: string;/messageHash: string;/' ./node_modules/@types/web3/eth/accounts.d.ts",
    "postinstall:3": "sed -i.bak '11s/hash: string;/rawTransaction: string;/' ./node_modules/@types/web3/eth/accounts.d.ts",
    "lint": "tslint --fix './{src,test}/**/*.ts' && prettier --write \"**/*.ts\"",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.3.6",
    "@nestjs/passport": "^5.0.2",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.1",
    "@types/bip32": "^1.0.0",
    "@types/bip39": "^2.4.0",
    "@types/bitcoinjs-lib": "^4.0.0",
    "@types/web3": "^1.0.5",
    "bip32": "^1.0.2",
    "bip39": "^2.5.0",
    "bitcoin-core": "^2.0.0",
    "bitcoinjs-lib": "^4.0.1",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "ethereumjs-util": "^5.2.0",
    "ethereumjs-wallet": "^0.6.2",
    "fastify-formbody": "^2.0.0",
    "nest-schedule": "^0.3.1",
    "nestjs-config": "^1.2.3",
    "passport": "^0.4.0",
    "passport-http-signature": "^1.0.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.3",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "@types/supertest": "^2.0.4",
    "jest": "^23.6.0",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "superagent-http-signature": "^0.2.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.1.0",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "webpack": "^4.2.0",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "json",
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
